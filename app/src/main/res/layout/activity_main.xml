<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jirayut.snrurun.MainActivity"
    android:background="@drawable/bg0">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/button"
            android:layout_weight="1"
            android:onClick="clickSignUpMain" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="clickSignInMain" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:gravity="center_horizontal"
        android:background="#64c1eceb"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="133dp"
            android:id="@+id/imageView6"
            android:background="@drawable/nobita48" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:hint="User"
            android:inputType="text"
            android:textColorHint="#090697"
            android:textColor="#090697" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#090697"
            android:textColor="#090697" />
    </LinearLayout>
</RelativeLayout>
